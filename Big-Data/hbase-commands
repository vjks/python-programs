/*Create a Hive-HBase table*/
CREATE TABLE hbase_table_1(key int, value string) STORED BY 'org.apache.hadoop.hive.hbase.HBaseStorageHandler'
WITH SERDEPROPERTIES ("hbase.columns.mapping" = ":key, cf1:val") TBLPROPERTIES ("hbase.table.name" = "xyz");

/*Show the contents of a table*/
scan 'tableName'
