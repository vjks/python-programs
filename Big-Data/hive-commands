/* Show all the databases in hive */
show databases;

/* Create a database in Hive */
create database databasename;

/* Clear the screen in Hive */
Ctrl + L

/* Use a database in hive */
use databasename;

/* Create a table in hive */
create table customers (
id bigint,
name string,
address string
);

/* View the schema of a table named customers */
describe customers;
describe formatted customers;


/* inserting into a table in hive */
insert into customers values (
1111, "James", "NY"
);

/* Creating a table in hive if it doesn't already exist */
create table if not exists orders (
id bigint,
product_id string,
customer_id bigint,
quantity int,
amount double
);

/* command to run a query without being connected to hive or beeline */
beeline -u jdbc:hive2:// -e "select * from trendytech.customers"

/* Writing a script with HQL */
beeline -u jdbc:hive2:// -f /home/cloudera/myscript.hql

/* Entering beeline from the linux terminal */
 beeline -u jdbc:hive2://

/* Running a script when you are already inside beeline */
source <filename including address>

/* searches for databases whose name starts with a certain character */
show databases like 'tr*';

/* Seeing the contents of a database in hive */
dfs -ls /user/hive/warehouse/mydatabase.db;

/* Seeing the contents of a table inside the database */
dfs -ls /user/hive/warehouse/trendytech.db/test;


/* Command to create a table in hive. The table is comma separated. */
create table if not exists products_managed(
id string,
title string,
cost float
)
row format delimited
fields terminated by ','
stored as textfile;
