/* Prevent a table from being dropped accidently */
alter table <table name> enable no_drop;

/* Allow a table to be dropped if no_drop is enabled */
alter table <table name> disable no_drop;

/* Skip a few rows while crating a table */
create table skip_test(name string, score int)
row format delimited fields terminated by ','
lines terminated by '\n' stored as
textfile tblproperties("skip.header.line.count"="3");

/* Executing Hadoop commands in Hive */
dfs -ls /user/cloudera;

/* Executing normal linux commands from hive/beeline */
!ls -ltr /home/cloudera/Desktop;

/* Set header property */
set hive.cli.print.header=true;
